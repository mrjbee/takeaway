<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="android:Theme.Holo.Light.NoActionBar"/>

    <style name="Panel.Separator" parent="AppTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#7BD1D1D1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Panel.Main" parent="AppTheme">
        <item name="android:background">#e8e8e8</item>
    </style>

    <style name="Text.Caption.Light" parent="AppTheme">
        <item name="android:textColor">@color/text.light</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="Text.Header.Component" parent="AppTheme">
        <item name="android:textColor">@color/text.dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="Text.Header.Caption.Component" parent="AppTheme">
        <item name="android:textColor">@color/text.dark</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>

    <style name="Text.Body" parent="AppTheme">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif</item>
        <item name="android:textColor">@color/text.dark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/text.dark.outer.glow</item>
    </style>

    <style name="Text.Body.Light" parent="Text.Body">
        <item name="android:textColor">@color/text.light</item>
        <item name="android:textColorHint">@color/text.light.darken</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
    </style>
    <style name="Text.Body.Light.Smaller" parent="Text.Body.Light">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Body.Optional" parent="Text.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text.dark.lighter</item>
    </style>

    <style name="Text.Body.Caption" parent="Text.Body">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.Prompt" parent="AppTheme">
        <item name="android:textColor">@color/text.dark</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowColor">@color/text.dark.outer.glow</item>
    </style>

    <style name="Text.Prompt.Secondary" parent="Text.Prompt">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Secondary" parent="Text.Prompt">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Text.Secondary.Description" parent="Text.Prompt">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="Button.Rect.Action" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/highlight</item>
        <item name="android:textSize">15dip</item>
        <item name="android:background">@drawable/button_panel</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Button.Round.Action" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/button_round</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <color name="background.light">#fffdfdfd</color>
    <color name="white">#ffffffff</color>
    <color name="text.light">#fff8f8f8</color>
    <color name="text.light.shadow">#66000000</color>
    <color name="text.light.darken">#83F8F8F8</color>
    <color name="text.dark">#ff5d5d5d</color>
    <color name="text.dark.lighter">#ff9d9d9d</color>
    <color name="text.dark.outer.glow">#b9ffffff</color>
    <color name="highlight">#ee002d</color>
    <color name="highlight2">#f01f37</color>
    <color name="transperent">#00FFFFFF</color>
    <color name="button.pressed">#2B000000</color>

</resources>
