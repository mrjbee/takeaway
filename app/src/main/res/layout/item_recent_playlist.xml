<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >

    <Button
        android:id="@+id/action_item"
        android:visibility="visible"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/Button.Rect.Action"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingRight="10dp"
        >

        <ImageView
            android:id="@+id/item_image"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/android_playlist_light"
            />



        <TextView
            android:id="@+id/item_caption"
            android:layout_toRightOf="@+id/item_image"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:singleLine="true"
            style="@style/Text.Body.Light"
            />

        <TextView
            android:id="@+id/item_description"
            android:layout_below="@+id/item_caption"
            android:layout_alignLeft="@+id/item_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:singleLine="true"
            style="@style/Text.Body.Light.Smaller"
            />


    </RelativeLayout>

</RelativeLayout>