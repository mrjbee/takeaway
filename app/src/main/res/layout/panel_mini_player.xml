<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@android:color/holo_red_dark"
    >

    <RelativeLayout
        android:id="@+id/panel_content"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/transperent_bottom"
        >

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/item_image"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/android_note_lightgray"
            />

        <TextView
            android:id="@+id/item_caption"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Caption"
            android:singleLine="true"
            style="@style/Text.Body.Smaller"
            />

        <TextView
            android:id="@+id/item_description"
            android:layout_below="@+id/item_caption"
            android:layout_alignLeft="@+id/item_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="File"
            android:singleLine="true"
            style="@style/Text.Body.Optional"
            />
    </RelativeLayout>

</LinearLayout>