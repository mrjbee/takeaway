<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/body_top">

    <LinearLayout
        android:id="@+id/panel_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/action_close"
                android:layout_gravity="center_vertical"
                style="@style/Button.Round.Action"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:padding="2dp"
                android:src="@drawable/android_down_round"/>

            <TextView
                android:id="@+id/text_cloud_title"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Text.Body.Caption"
                android:text="Kodi 1.0.1"/>


            <TextView
                android:id="@+id/text_cloud_status"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Offline"
                style="@style/Text.Body.Optional"/>

            <ImageView
                android:id="@+id/action_setup"
                android:layout_gravity="center_vertical"
                style="@style/Button.Round.Action"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/android_more"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            style="@style/Panel.Separator"/>

        </LinearLayout>
</LinearLayout>